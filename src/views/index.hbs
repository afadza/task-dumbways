<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap"
      rel="stylesheet"
    />
    <title>Personal Website</title>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/c99e3a2c05.js"
      crossorigin="anonymous"
    ></script>
    {{! <script src="JS/my-project.js"></script> }}
    <style>
      @media only screen and (max-width: 600px) { #hero-section { width: 90%;
      display: flex; flex-direction: column; align-items: center; }
      #social-media { text-align: center; } #project { display: flex;
      flex-direction: column; align-items: center; margin-bottom: 10px; } #card
      { margin-bottom: 20px; } }
    </style>
  </head>
  <body style="font-family: 'Poppins', sans-serif">
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5 fw-bold">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="/image/logo.png" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/"
                style="color: orangered"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Testimonials</a>
            </li>
          </ul>
          <form class="d-flex">
            <button
              type="button"
              class="btn"
              style="background-color: orangered"
            >
              <a
                href="/contact-me"
                class="link-secondary"
                style="text-decoration: none; color: white"
              >Contact me</a>
            </button>
          </form>
        </div>
      </div>
    </nav>

    <div
      class="container d-flex justify mt-5 justify-content-center shadow-lg p-5 mb-5 bg-body rounded"
      id="hero-section"
    >
      <div style="width: 100%">
        <div class="card-body">
          <h5 class="card-title fw-bold">Hi! Welcome to my put</h5>
          <p class="card-text mb-5">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Perferendis
            recusandae necessitatibus quos mollitia alias culpa eos, at
            voluptate eum temporibus laborum explicabo tempore adipisci quasi
            praesentium porro autem quae natus. Possimus maiores nostrum
            reprehenderit natus. Consequatur quo maxime distinctio rerum!
            Officiis non deserunt asperiores placeat doloribus ab aspernatur
            assumenda cum?
          </p>
          <a
            href="#"
            class="card-link px-3 py-2 rounded"
            style="
              text-decoration: none;
              color: white;
              background-color: orangered;
            "
          >Contact</a>
          <a
            href="#"
            class="card-link px-3 py-2 rounded"
            style="
              text-decoration: none;
              color: white;
              background-color: orangered;
            "
          >Download&emsp;<i class="fa-solid fa-download"></i></a>
          <div class="mt-5 fs-1" id="social-media">
            <i class="fa-brands fa-linkedin"></i>
            <i class="fa-brands fa-square-instagram"></i>
            <i class="fa-brands fa-square-facebook"></i>
            <i class="fa-brands fa-square-twitter"></i>
          </div>
        </div>
      </div>

      <div class="card" style="width: 18rem">
        <img src="/image/project.jpg" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title text-center mt-5 fw-bold">
            Arya Fadhilah Dzaki
          </h5>
          <p class="card-text text-center">Fullstack</p>
        </div>
      </div>
    </div>

    <hr />

    <div class="my-project mt-5">
      <h1 class="text-center mb-5 fw-bold">My Project</h1>
      <div
        class="mx-auto mb-5"
        style="display: grid;
              justify-content: space-between;
              grid-template-columns: 1fr 1fr 1fr;
              gap: 20px; width: 80%;"
        id="project"
      >

        {{#each dataBlog}}
          <div class="card" id="card">
            <img src="/image/project.jpg" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title fw-bold">
                <a
                  href="/blog-detail/{{@index}}"
                  style="text-decoration: none; color:black;"
                >{{this.title}}</a>
              </h5>
              <p style="font-size: 10px">Durasi :
                {{this.duration}}
                | Arya Fadhilah Dzaki</p>
                <div style="height: 100px;">
              <p class="card-text mb-4" style="font-size: 10px">
                &emsp;{{this.content}}
              </p></div>
              <div class="gap-5 fs-3 mb-3">
                {{#if this.nodejs}}
                  <a><i class="fa-brands fa-node-js"></i></a>
                {{/if}}
                {{#if this.reactjs}}
                  <a><i class="fa-brands fa-react"></i></a>
                {{/if}}
                {{#if this.js}}
                  <a><i class="fa-brands fa-js"></i></a>
                {{/if}}
                {{#if this.vuejs}}
                  <a><i class="fa-brands fa-vuejs"></i></a>
                {{/if}}
              </div>
              <div class="d-flex justify-content-end">
                <a
                  href="/edit-blog/{{@index}}"
                  class="btn me-2 px-4"
                  style="background-color: orangered; color: white"
                >edit</a>
                <a
                  href="/delete-blog/{{@index}}"
                  class="btn px-3"
                  style="background-color: orangered; color: white"
                >delete</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </body>
</html>